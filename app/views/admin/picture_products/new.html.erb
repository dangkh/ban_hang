<div class="container">
  <%= form_for [:admin, @picture_product],
    html: {multipart: true} do |f| %>
    <div class="row">
      <div class="col-md-4">
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="col-md-4 col-md-offset-3 border-product-detail">
        <div>
        <p class="name-product-detail"><%= @product.name %></p>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit t(:create), class: "btn btn-primary pull-right" %>
    </div>
  <% end %>
</div>
