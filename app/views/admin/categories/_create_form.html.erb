<%= form_for [:admin, @category] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: t(:name),
      id: "category_name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, placeholder: t(:description),
      id: "category_description", class: "form-control" %>
  </div>
  
  <div class="modal-footer">
    <%= f.submit t(:save), class: "btn btn-primary" %>
    <button type="submit" class="btn btn-danger cancel"
      data-dismiss="modal">
        <%= t :cancel %>
    </button>
  </div>
<% end %>
