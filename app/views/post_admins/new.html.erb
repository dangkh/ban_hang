<div class="container">
  <%= form_for PostAdmin.new do |f| %>
    <div>
      <%= f.label :title %><br>
      <%= f.text_area :title, class: "form-control" %>
    </div>
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body, class: "ckeditor" %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary pull-right" %>
  <% end %>
</div>
